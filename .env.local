# Portfolio Backend - Local Development Environment

# Application Settings
PORT=8080
GIN_MODE=debug
LOG_LEVEL=debug

# Database Configuration (Local MongoDB)
MONGO_URI=mongodb://admin:password@localhost:27017/portfolio?authSource=admin
MONGO_DATABASE=portfolio
MONGO_TIMEOUT=10

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username
GITHUB_API_URL=https://api.github.com

# Authentication
JWT_SECRET=development_jwt_secret_minimum_32_characters_long_for_local_use
TOKEN_EXPIRATION=24h

# Rate Limiting (More permissive for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Cache Configuration
CACHE_TTL=60
CACHE_CLEANUP_INTERVAL=120

# Security (Permissive for local development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Features
ENABLE_PPROF=true
ENABLE_DEBUG_ROUTES=true